<!DOCTYPE html>
<html lang="pl">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kontakt</title>
    <!-- @include 'styles.kit' -->
</head>

<body>
    <nav class="nav">
        <div class="logo">
            <a href="#">
                <h2><i class="fa-solid fa-tree"></i> Forest</h2>
            </a>
        </div>
        <button class="burger-btn">
            <div class="burger-btn__bar"></div>
            <div class="burger-btn__bar"></div>
            <div class="burger-btn__bar"></div>
            </div>
        </button>
        <div class="nav__items-desktop">
            <a href="index.html#home" class="nav__item">Home</a>
            <a href="index.html#aboutus" class="nav__item">O nas</a>
            <a href="index.html#offers" class="nav__item">Oferta</a>
            <a href="contact.html" class="nav__item--active nav__item">Kontakt</a>
        </div>
        <div class="nav__items-mobile">
            <a href="index.html#home" class="nav__item">Home</a>
            <a href="index.html#aboutus" class="nav__item">O nas</a>
            <a href="index.html#offers" class="nav__item">Oferta</a>
            <a href="contact.html" class="nav__item">Kontakt</a>
        </div>
    </nav>
    <!-- @include 'header.kit' -->
    <main class="contact">
        <form class="form">
            <h2 class="form__h2">Kontakt</h2>
            <div class="form__box">
                <label for="username">Imię:</label>
                <input type="text" id="username" placeholder="Podaj imię">
            </div>
            <div class="form__box">
                <label for="email">e-mail:</label>
                <input type="email" id="email" placeholder="Podaj adres e-mail">
            </div>
            <div class="form__box">
                <label for="text">Treść:</label>
                <textarea placeholder="Wpisz treść wiadomości"> </textarea>
            </div>

            <button class="form__btn">Wyślij</button>
        </form>
        <div class="google-map">
            <h2 class="google-map__h2">Znajdź nas na mapie!</h2>
            <div style="width: 100%"><iframe width="100%" height="600" frameborder="0" scrolling="no" marginheight="0"
                    marginwidth="0"
                    src="https://maps.google.com/maps?width=100%25&amp;height=600&amp;hl=en&amp;q=Jasnog%C3%B3rksa%202,%20krak%C3%B3w+(Forest%20group)&amp;t=&amp;z=14&amp;ie=UTF8&amp;iwloc=B&amp;output=embed"><a
                        href="https://www.maps.ie/distance-area-calculator.html">measure distance on map</a></iframe>
            </div>
        </div>
    </main>
    <!--  @include 'footer.kit' -->
      <!-- @include 'cookies.kit' -->

    <script src="src/js/main.js"></script>

</body>

</html>